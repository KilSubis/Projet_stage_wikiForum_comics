{% extends "base.html.twig" %}

{% block title %}
	ComicsStorage -
	{{ series.nom }}
{% endblock %}

{% block body %}
	<div class="container">

		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		<h1 class="mt-4">
			{{ series.nom }}
		</h1>

		<span class="badge bg-secondary">La moyenne de cette serie est de
			{{ series.average|number_format(2, '.', ',') }}/5
		</span>

		<div>
			<span class="badge bg-primary mt-2">Créée le
				{{ series.createdAt|date('d/m/Y') }}</span>
		</div>

		<p class="mt-2">Année de parution :
			{{ series.Annee }}</p>

		{% if series.NbComics %}
			<p>Nombre de comics dans la serie :
				{{ series.NbComics }}</p>
		{% else %}
			<p>Pas de comics renseigné</p>
		{% endif %}

		<div class="card border-primary mb-3 mt-4" style="max-width: 50rem;">
			<div class="card-header">Description</div>
			<div class="card-body">
				<p class="card-text">{{ series.description }}</p>
			</div>
		</div>


		<h3 class="mt-4">Comics</h3>
		{% for comic in series.Comics %}
			<span class="badge bg-dark">{{ comic.nom }}</span>
		{% endfor %}

		<div>
			{{ form(form) }}
			</div>


		</div>

	{% endblock %}

